{
  "name": "actions-operator",
  "version": "0.2.0",
  "description": "Action for easily testing Operator Charms with Juju.",
  "homepage": "https://github.com/charmed-kubernetes/actions-operator",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charmed-kubernetes/actions-operator.git"
  },
  "bugs": {
    "url": "https://github.com/charmed-kubernetes/actions-operator/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "juju"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npm run package:bootstrap && npm run package:cleanup",
    "package:bootstrap": "npx ncc build src/bootstrap.ts -o dist/bootstrap --source-map",
    "package:cleanup": "npx ncc build src/cleanup.ts -o dist/cleanup --source-map",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/artifact": "^2.1.11",
    "@actions/cache": "3.3.0",
    "@actions/core": "1.11.1",
    "@actions/exec": "1.1.1",
    "@actions/github": "6.0.0",
    "@actions/glob": "0.5.0",
    "js-yaml": "4.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vercel/ncc": "^0.38.2",
    "eslint": "^9.0.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.4"
  }
}
